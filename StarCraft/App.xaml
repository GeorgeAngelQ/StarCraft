<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StarCraft"
             xmlns:converters="clr-namespace:StarCraft.Converters"
             x:Class="StarCraft.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Estilos personalizados -->
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#9fa5b2"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="10,5"/>
            </Style>
            <Style TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#1d1d20"/>
                <Setter Property="Shadow" Value="Medium"/>
            </Style>

            <!-- Convertidores -->
            <converters:StringNullOrEmptyBoolConverter x:Key="StringNullOrEmptyBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
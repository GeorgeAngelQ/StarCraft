<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarCraft.Views.MapasPage"
             Title="Mapas">

    <ScrollView>
        <!-- ðŸ”¹ Buscador -->

        <VerticalStackLayout Padding="10" Spacing="15">
                        <SearchBar x:Name="SearchBarMapas"
               Placeholder="Buscar mapa..."
               TextChanged="OnBuscarMapa" />
            <!-- ðŸ”¹ Formulario en dos columnas -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
                <VerticalStackLayout Grid.Column="0" Spacing="10">
                    <Label Text="Nombre del mapa:" />
                    <Entry x:Name="NombreEntry" Placeholder="Ej. Dominator" Completed="Campo_Completed"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="10" Padding="10">
                    <Button Text="Registrar mapa"
                            Clicked="OnRegistrarClicked"
                            BackgroundColor="White"
                            TextColor="Black"
                            CornerRadius="10"
                            Margin="0,20,0,0"/>
                </VerticalStackLayout>
            </Grid>

            <!-- ðŸ”¹ Lista de mapas -->
            <CollectionView x:Name="MapasCollection" Margin="0,10,0,0">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               Margin="5"
                               BorderColor="#ddd"
                               CornerRadius="8">
                            <Grid ColumnDefinitions="*,Auto" Padding="10">
                                <Label Grid.Column="0"
                                       Text="{Binding Nombre}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                                <Button Grid.Column="1"
                                        Text="ðŸ—‘"
                                        BackgroundColor="Transparent"
                                        Clicked="OnEliminarClicked"
                                        CommandParameter="{Binding IdMapa}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarCraft.Views.MapasPage"
             Title="Mapas"
             BackgroundColor="#0F0F0F">

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- ENCABEZADO -->
            <Frame Grid.Row="0"
                   BackgroundColor="#1A1A1D"
                   BorderColor="#2D2D30"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <!-- TÃ­tulo -->
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ—ºï¸" FontSize="28" VerticalOptions="Center" />
                        <Label Text="GestiÃ³n de Mapas" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="#6C63FF"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <!-- Barra de bÃºsqueda -->
                    <Frame BackgroundColor="#252529"
                           BorderColor="#3E3E42"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False">
                        <SearchBar x:Name="SearchBarMapas"
                                   Placeholder="ðŸ” Buscar mapa..."
                                   PlaceholderColor="#808080"
                                   TextColor="#FFFFFF"
                                   CancelButtonColor="#6C63FF"
                                   BackgroundColor="Transparent"
                                   TextChanged="OnBuscarMapa" />
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- FORMULARIO DE REGISTRO -->
            <Frame Grid.Row="1"
                   BackgroundColor="#1A1A1D"
                   BorderColor="#2D2D30"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <!-- SubtÃ­tulo del formulario -->
                    <Label Text="âž• Agregar Nuevo Mapa" 
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#6C63FF"
                           Margin="0,0,0,10"/>

                    <Grid ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Campo de nombre -->
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="ðŸ—ºï¸ Nombre del Mapa *" 
                                   FontAttributes="Bold"
                                   TextColor="#E0E0E0"
                                   FontSize="14" />
                            <Frame BackgroundColor="#252529"
                                   BorderColor="#3E3E42"
                                   CornerRadius="8"
                                   Padding="12,8"
                                   HasShadow="False">
                                <Entry x:Name="NombreEntry"
                                       Placeholder="Ej: Lost Temple, Python..."
                                       PlaceholderColor="#808080"
                                       TextColor="#FFFFFF"
                                       BackgroundColor="Transparent"
                                       Completed="Campo_Completed"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- BotÃ³n Registrar -->
                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Label Text=" " FontSize="14"/>
                            <Button x:Name="BtnRegistrar"
                                    Text="ðŸ’¾ GUARDAR"
                                    BackgroundColor="#6C63FF"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    CornerRadius="8"
                                    HeightRequest="48"
                                    Clicked="OnRegistrarClicked">
                                <Button.Shadow>
                                    <Shadow Brush="#6C63FF" Opacity="0.5" Radius="15" Offset="0,5" />
                                </Button.Shadow>
                            </Button>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- LISTA DE MAPAS -->
            <Frame Grid.Row="2"
                   BackgroundColor="#1A1A1D"
                   BorderColor="#2D2D30"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <Grid RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- TÃ­tulo de la lista -->
                    <HorizontalStackLayout Grid.Row="0" Spacing="10">
                        <Label Text="ðŸ“‹" FontSize="20" VerticalOptions="Center"/>
                        <Label Text="Mapas Registrados" 
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#6C63FF"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Selector de items por pÃ¡gina y contador -->
                    <Grid Grid.Row="1" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Items por pÃ¡gina -->
                        <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                            <Label Text="Mostrar:" 
                                   TextColor="#E0E0E0"
                                   VerticalOptions="Center"/>
                            <Frame BackgroundColor="#252529"
                                   BorderColor="#3E3E42"
                                   CornerRadius="6"
                                   Padding="0"
                                   HasShadow="False">
                                <Picker x:Name="PickerItemsPorPagina"
                                        TextColor="#FFFFFF"
                                        TitleColor="#808080"
                                        BackgroundColor="Transparent"
                                        WidthRequest="80"
                                        SelectedIndex="1"
                                        SelectedIndexChanged="OnItemsPorPaginaChanged">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>10</x:String>
                                            <x:String>15</x:String>
                                            <x:String>20</x:String>
                                            <x:String>30</x:String>
                                            <x:String>50</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Frame>
                        </HorizontalStackLayout>

                        <!-- Total de registros -->
                        <Label Grid.Column="2"
                               x:Name="LblTotalRegistros"
                               Text="Total: 0 mapa(s)"
                               TextColor="#B8B8B8"
                               FontSize="14"
                               HorizontalOptions="End"
                               VerticalOptions="Center"/>
                    </Grid>

                    <!-- CollectionView con Grid Layout -->
                    <CollectionView Grid.Row="2"
                                   x:Name="MapasCollection"
                                   SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" 
                                           Span="2"
                                           HorizontalItemSpacing="15"
                                           VerticalItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#252529"
                                       BorderColor="#3E3E42"
                                       CornerRadius="10"
                                       Padding="15"
                                       HasShadow="False">
                                    <Grid RowSpacing="10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Icono y nombre -->
                                        <HorizontalStackLayout Grid.Row="0" Spacing="10">
                                            <Frame BackgroundColor="#6C63FF"
                                                   CornerRadius="20"
                                                   Padding="0"
                                                   WidthRequest="40"
                                                   HeightRequest="40"
                                                   HasShadow="False"
                                                   VerticalOptions="Center">
                                                <Label Text="ðŸ—ºï¸"
                                                       FontSize="20"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Frame>
                                            <Label Text="{Binding Nombre}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#FFFFFF"
                                                   VerticalOptions="Center"
                                                   LineBreakMode="TailTruncation"/>
                                        </HorizontalStackLayout>

                                        <!-- BotÃ³n eliminar -->
                                        <Button Grid.Row="1"
                                                Text="ðŸ—‘ï¸ Eliminar"
                                                BackgroundColor="#FF6B6B"
                                                TextColor="White"
                                                FontSize="13"
                                                CornerRadius="6"
                                                HeightRequest="35"
                                                Clicked="OnEliminarClicked"
                                                CommandParameter="{Binding IdMapa}">
                                            <Button.Shadow>
                                                <Shadow Brush="#FF6B6B" Opacity="0.3" Radius="8" Offset="0,3" />
                                            </Button.Shadow>
                                        </Button>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Controles de paginaciÃ³n -->
                    <Frame Grid.Row="3"
                           BackgroundColor="#252529"
                           BorderColor="#3E3E42"
                           CornerRadius="8"
                           Padding="15"
                           HasShadow="False">
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Primera pÃ¡gina -->
                            <Button Grid.Column="0"
                                    x:Name="BtnPrimeraPagina"
                                    Text="â®ï¸"
                                    BackgroundColor="#3E3E42"
                                    TextColor="White"
                                    CornerRadius="6"
                                    WidthRequest="50"
                                    HeightRequest="40"
                                    FontSize="16"
                                    Clicked="OnPrimeraPaginaClicked"/>

                            <!-- Anterior -->
                            <Button Grid.Column="1"
                                    x:Name="BtnAnterior"
                                    Text="â—€ï¸"
                                    BackgroundColor="#3E3E42"
                                    TextColor="White"
                                    CornerRadius="6"
                                    WidthRequest="50"
                                    HeightRequest="40"
                                    FontSize="16"
                                    Clicked="OnAnteriorClicked"/>

                            <!-- Indicador de pÃ¡gina -->
                            <Frame Grid.Column="2"
                                   BackgroundColor="#1A1A1D"
                                   BorderColor="#6C63FF"
                                   CornerRadius="6"
                                   Padding="10,5"
                                   HasShadow="False"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center">
                                <Label x:Name="LblPaginaActual"
                                       Text="PÃ¡gina 1 de 1"
                                       TextColor="#6C63FF"
                                       FontAttributes="Bold"
                                       FontSize="14"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <!-- Siguiente -->
                            <Button Grid.Column="3"
                                    x:Name="BtnSiguiente"
                                    Text="â–¶ï¸"
                                    BackgroundColor="#3E3E42"
                                    TextColor="White"
                                    CornerRadius="6"
                                    WidthRequest="50"
                                    HeightRequest="40"
                                    FontSize="16"
                                    Clicked="OnSiguienteClicked"/>

                            <!-- Ãšltima pÃ¡gina -->
                            <Button Grid.Column="4"
                                    x:Name="BtnUltimaPagina"
                                    Text="â­ï¸"
                                    BackgroundColor="#3E3E42"
                                    TextColor="White"
                                    CornerRadius="6"
                                    WidthRequest="50"
                                    HeightRequest="40"
                                    FontSize="16"
                                    Clicked="OnUltimaPaginaClicked"/>
                        </Grid>
                    </Frame>
                </Grid>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
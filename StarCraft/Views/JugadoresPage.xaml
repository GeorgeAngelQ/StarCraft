<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarCraft.Views.JugadoresPage"
             Title="Jugadores"
             BackgroundColor="#0F0F0F">
    
    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- TÃTULO Y BÃšSQUEDA -->
            <Frame Grid.Row="0"
                   BackgroundColor="#1A1A1D"
                   BorderColor="#2D2D30"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <!-- TÃ­tulo -->
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Label Text="ðŸ‘¤" FontSize="28" VerticalOptions="Center" />
                        <Label Text="GestiÃ³n de Jugadores" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="#6C63FF"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <!-- Barra de bÃºsqueda -->
                    <Frame BackgroundColor="#252529"
                           BorderColor="#3E3E42"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False">
                        <SearchBar x:Name="SearchBarJugadores"
                                   Placeholder="ðŸ” Buscar jugador por alias..."
                                   PlaceholderColor="#808080"
                                   TextColor="#FFFFFF"
                                   CancelButtonColor="#6C63FF"
                                   BackgroundColor="Transparent"
                                   TextChanged="OnSearchTextChanged" />
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- FORMULARIO DE REGISTRO/EDICIÃ“N -->
            <Frame Grid.Row="1"
                   BackgroundColor="#1A1A1D"
                   BorderColor="#2D2D30"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <!-- SubtÃ­tulo del formulario -->
                    <Label Text="âž• Agregar / Editar Jugador" 
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#6C63FF"
                           Margin="0,0,0,10"/>

                    <Grid ColumnSpacing="15" RowSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Alias -->
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="ðŸŽ® Alias *" 
                                   FontAttributes="Bold"
                                   TextColor="#E0E0E0"
                                   FontSize="14" />
                            <Frame BackgroundColor="#252529"
                                   BorderColor="#3E3E42"
                                   CornerRadius="8"
                                   Padding="12,8"
                                   HasShadow="False">
                                <Entry x:Name="AliasEntry" 
                                       Placeholder="Ingrese alias"
                                       PlaceholderColor="#808080"
                                       TextColor="#FFFFFF"
                                       BackgroundColor="Transparent"
                                       Completed="Campo_Completed"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- PaÃ­s -->
                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Label Text="ðŸŒ PaÃ­s" 
                                   FontAttributes="Bold"
                                   TextColor="#E0E0E0"
                                   FontSize="14" />
                            <Frame BackgroundColor="#252529"
                                   BorderColor="#3E3E42"
                                   CornerRadius="8"
                                   Padding="12,8"
                                   HasShadow="False">
                                <Entry x:Name="PaisEntry" 
                                       Placeholder="Ingrese paÃ­s"
                                       PlaceholderColor="#808080"
                                       TextColor="#FFFFFF"
                                       BackgroundColor="Transparent"
                                       Completed="Campo_Completed"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Raza -->
                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Label Text="âš”ï¸ Raza Principal" 
                                   FontAttributes="Bold"
                                   TextColor="#E0E0E0"
                                   FontSize="14" />
                            <Frame BackgroundColor="#252529"
                                   BorderColor="#3E3E42"
                                   CornerRadius="8"
                                   Padding="0"
                                   HasShadow="False">
                                <Picker x:Name="RazaPicker"
                                        TextColor="#FFFFFF"
                                        TitleColor="#808080"
                                        BackgroundColor="Transparent">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String></x:String>
                                            <x:String>Terran</x:String>
                                            <x:String>Zerg</x:String>
                                            <x:String>Protoss</x:String>
                                        </x:Array>  
                                    </Picker.ItemsSource>
                                </Picker>
                            </Frame>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- BotÃ³n Guardar -->
                    <Button Text="ðŸ’¾ GUARDAR JUGADOR" 
                            BackgroundColor="#6C63FF"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="16"
                            CornerRadius="8"
                            HeightRequest="50"
                            Clicked="OnGuardarClicked">
                        <Button.Shadow>
                            <Shadow Brush="#6C63FF" Opacity="0.5" Radius="15" Offset="0,5" />
                        </Button.Shadow>
                    </Button>
                </VerticalStackLayout>
            </Frame>

            <!-- LISTA DE JUGADORES -->
            <Frame Grid.Row="2"
                   BackgroundColor="#1A1A1D"
                   BorderColor="#2D2D30"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <Grid RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- TÃ­tulo de la lista -->
                    <HorizontalStackLayout Grid.Row="0" Spacing="10">
                        <Label Text="ðŸ“‹" FontSize="20" VerticalOptions="Center"/>
                        <Label Text="Lista de Jugadores Registrados" 
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#6C63FF"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Selector de items por pÃ¡gina y contador -->
                    <Grid Grid.Row="1" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Items por pÃ¡gina -->
                        <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                            <Label Text="Mostrar:" 
                                   TextColor="#E0E0E0"
                                   VerticalOptions="Center"/>
                            <Frame BackgroundColor="#252529"
                                   BorderColor="#3E3E42"
                                   CornerRadius="6"
                                   Padding="0"
                                   HasShadow="False">
                                <Picker x:Name="PickerItemsPorPagina"
                                        TextColor="#FFFFFF"
                                        TitleColor="#808080"
                                        BackgroundColor="Transparent"
                                        WidthRequest="80"
                                        SelectedIndex="0"
                                        SelectedIndexChanged="OnItemsPorPaginaChanged">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>5</x:String>
                                            <x:String>10</x:String>
                                            <x:String>15</x:String>
                                            <x:String>20</x:String>
                                            <x:String>30</x:String>
                                            <x:String>50</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Frame>
                        </HorizontalStackLayout>

                        <!-- Total de registros -->
                        <Label Grid.Column="2"
                               x:Name="LblTotalRegistros"
                               Text="Total: 0 jugador(es)"
                               TextColor="#B8B8B8"
                               FontSize="14"
                               HorizontalOptions="End"
                               VerticalOptions="Center"/>
                    </Grid>

                    <!-- CollectionView -->
                    <CollectionView Grid.Row="2"
                                   x:Name="JugadoresCollection"
                                   SelectionMode="Single"
                                   SelectionChanged="OnJugadorSeleccionado">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#252529"
                                       BorderColor="#3E3E42"
                                       CornerRadius="10"
                                       Padding="15"
                                       Margin="0,8"
                                       HasShadow="False">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                        <!-- Icono de raza -->
                                        <Frame Grid.Column="0"
                                               BackgroundColor="#6C63FF"
                                               CornerRadius="25"
                                               Padding="0"
                                               WidthRequest="50"
                                               HeightRequest="50"
                                               HasShadow="False"
                                               VerticalOptions="Center">
                                            <Label Text="ðŸ‘¤"
                                                   FontSize="24"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Frame>

                                        <!-- InformaciÃ³n del jugador -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                            <Label Text="{Binding Alias}" 
                                                   FontAttributes="Bold" 
                                                   FontSize="16"
                                                   TextColor="#FFFFFF"/>
                                            <HorizontalStackLayout Spacing="5">
                                                <Label Text="ðŸŒ" FontSize="12"/>
                                                <Label Text="{Binding Pais}" 
                                                       FontSize="13"
                                                       TextColor="#B8B8B8"/>
                                            </HorizontalStackLayout>
                                            <HorizontalStackLayout Spacing="5">
                                                <Label Text="âš”ï¸" FontSize="12"/>
                                                <Label Text="{Binding RazaPrincipal}" 
                                                       FontSize="13"
                                                       TextColor="#808080"/>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <!-- Botones de acciÃ³n -->
                                        <HorizontalStackLayout Grid.Column="2" 
                                                              Spacing="5"
                                                              VerticalOptions="Center">
                                            <Button Text="âœï¸"
                                                    BackgroundColor="#6C63FF"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    WidthRequest="45"
                                                    HeightRequest="45"
                                                    FontSize="18"
                                                    Clicked="OnEditarClicked" 
                                                    CommandParameter="{Binding}">
                                                <Button.Shadow>
                                                    <Shadow Brush="#6C63FF" Opacity="0.4" Radius="8" Offset="0,3" />
                                                </Button.Shadow>
                                            </Button>
                                            <Button Text="ðŸ—‘ï¸"
                                                    BackgroundColor="#FF6B6B"
                                                    TextColor="White"
                                                    CornerRadius="8"
                                                    WidthRequest="45"
                                                    HeightRequest="45"
                                                    FontSize="18"
                                                    Clicked="OnEliminarClicked" 
                                                    CommandParameter="{Binding}">
                                                <Button.Shadow>
                                                    <Shadow Brush="#FF6B6B" Opacity="0.4" Radius="8" Offset="0,3" />
                                                </Button.Shadow>
                                            </Button>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Controles de paginaciÃ³n -->
                    <Frame Grid.Row="3"
                           BackgroundColor="#252529"
                           BorderColor="#3E3E42"
                           CornerRadius="8"
                           Padding="15"
                           HasShadow="False">
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Primera pÃ¡gina -->
                            <Button Grid.Column="0"
                                    x:Name="BtnPrimeraPagina"
                                    Text="â®ï¸"
                                    BackgroundColor="#3E3E42"
                                    TextColor="White"
                                    CornerRadius="6"
                                    WidthRequest="50"
                                    HeightRequest="40"
                                    FontSize="16"
                                    Clicked="OnPrimeraPaginaClicked"/>

                            <!-- Anterior -->
                            <Button Grid.Column="1"
                                    x:Name="BtnAnterior"
                                    Text="â—€ï¸"
                                    BackgroundColor="#3E3E42"
                                    TextColor="White"
                                    CornerRadius="6"
                                    WidthRequest="50"
                                    HeightRequest="40"
                                    FontSize="16"
                                    Clicked="OnAnteriorClicked"/>

                            <!-- Indicador de pÃ¡gina -->
                            <Frame Grid.Column="2"
                                   BackgroundColor="#1A1A1D"
                                   BorderColor="#6C63FF"
                                   CornerRadius="6"
                                   Padding="10,5"
                                   HasShadow="False"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center">
                                <Label x:Name="LblPaginaActual"
                                       Text="PÃ¡gina 1 de 1"
                                       TextColor="#6C63FF"
                                       FontAttributes="Bold"
                                       FontSize="14"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>

                            <!-- Siguiente -->
                            <Button Grid.Column="3"
                                    x:Name="BtnSiguiente"
                                    Text="â–¶ï¸"
                                    BackgroundColor="#3E3E42"
                                    TextColor="White"
                                    CornerRadius="6"
                                    WidthRequest="50"
                                    HeightRequest="40"
                                    FontSize="16"
                                    Clicked="OnSiguienteClicked"/>

                            <!-- Ãšltima pÃ¡gina -->
                            <Button Grid.Column="4"
                                    x:Name="BtnUltimaPagina"
                                    Text="â­ï¸"
                                    BackgroundColor="#3E3E42"
                                    TextColor="White"
                                    CornerRadius="6"
                                    WidthRequest="50"
                                    HeightRequest="40"
                                    FontSize="16"
                                    Clicked="OnUltimaPaginaClicked"/>
                        </Grid>
                    </Frame>
                </Grid>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
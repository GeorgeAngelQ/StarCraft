<ContentPage
    x:Class="StarCraft.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StarCraft Tracker">

    <VerticalStackLayout Padding="30" Spacing="15">
        <Button Text="Series" Clicked="OnSeriesClicked" />
        <Button Text="Juegos" Clicked="OnJuegosClicked" />
        <Button Text="Jugadores" Clicked="OnJugadoresClicked" />
        <Button Text="Mapas" Clicked="OnMapasClicked" />
    </VerticalStackLayout>
</ContentPage>
